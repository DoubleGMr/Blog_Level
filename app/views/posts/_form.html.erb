
<%= form_for(@post) do |f| %>
	<div>
		<label for="title">Title of Post</label>
		<%= f.text_field :title, placeholder:'The title of Post',class: 'post_title' %>
		<!-- <input class="post_title" type="text" placeholder="The title of Post"> -->
	</div>
	<div>
		<label for="category">Category of Post</label>
		<select class="post_category">
			<option value="">请选择Post的类别</option>
			<option value="Html&Css">Html&Css</option>
			<option value="Javascript">Javascript</option>
			<option value="Ruby on Rails">Ruby on Rails</option>
			<option value="React Native">React Native</option>
		</select>
	</div>
	<div>
		<label for="post">Post内容</label>
		<%= f.cktext_area :content,:class => 'ckeditor' %>
	</div>
	<div>
		<%= f.check_box :publish %><span class="publish">If you want it to Publish?</span>
	</div>
	<div>
		<%= f.submit value:'Submit' %>
	</div>
<% end %>