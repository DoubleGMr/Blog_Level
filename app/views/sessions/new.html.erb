<% provide(:title,'Login User') %>
<h2>请填写正确的账号</h2>
<%= form_for(:session, url: login_path) do |f| %>
	<div>
		<label for="account"><span class="fa fa-user fa-fw"></span> 邮箱</label>
		<%= f.text_field :email,placeholder: "你的邮箱地址" %>
	</div>
	<div>
		<label for="password"><span class="fa fa-lock fa-fw"></span> 密码</label>
		<%= f.password_field :password,placeholder: "你的密码" %>
	</div>
	<div>
		<%= f.check_box :remember_me %>
		<span class="remember">记住我</span>
		<%= link_to 'Forget your password?',new_password_reset_path,class: 'forget' %>
	</div>
	<div>
		<%= f.submit "Login" %>
	</div>
<% end %>