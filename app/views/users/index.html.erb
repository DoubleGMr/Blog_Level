<% provide(:title,'AllTourist') %>
<div class="list">
	<ul class="left">
		<li>
			<span class="category">Sorting of Posts</span>
			<ul>
				<li><%= link_to 'Desc of Time(倒序)', users_path(order: 'desc') %></li>
				<li><%= link_to 'Asc of Time(正序)', users_path(order: 'asc') %></li>
			</ul>
		</li>
	</ul>
</div>
<div class="maincontent">
	<h2>All Tourists</h2>
	<ul class="post-list">
		<% @users.each do |user| %>
			<%= render user %>
		<% end %>
	</ul>
	<%= will_paginate %>
</div>